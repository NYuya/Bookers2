
<div class="container">
  <div class="row">


    <div class="col-lg-3" >

      <div class="profile-container">
        <h2>User info</h2>
          <div class="row">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          </div>
            <div class="d-block ">
              <tr>
                <th>name</th>
                <th class="profile-name"><%= @user.name %></th>
              </tr>
            </div>
            <div class="d-block ">
              <tr>
                <th>introduce</th>
                <th class="profile-introduction"><%= @user.introduce %></th>
              </tr>
            </div>

          <% if @user.id == current_user.id %>
            <%= link_to  edit_user_path(@user), class: "pull-right" , class: "btn btn-default btn-block" do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            <% end %>
          <% end %>
      </div>


      <h2>New book</h2>
      <%= form_for(@newbook) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="field ">
          <%= f.label :title %>
          <div class="title d-block"><%= f.text_field :title %></div>
        </div>

        <div class="field">
          <%= f.label :Opinion %>
          <div class="d-block"><%= f.text_area :body %></div>
        </div>

        <div class="actions">
          <%= f.submit 'Create Book', class: "pull-right" , class: "btn btn-primary  btn-block" do %><% end %>
        </div>
      <% end %>

    </div>


  	<div class="col-lg-9">
      <h2>Books</h2>
      	<table class="table table-hover">
      		<thead>
      			<th>image</th>
            <th>name</th>
      		</thead>

          <% if @users.present? %>
            <% @users.each do |user| %>
              <tr>
              	<td>
                  <%= image_tag @user %>
                </td>
                <td><%= user.name %></td>
              	<td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          <% end %>
        </table>
    </div>

	</div>

  </div>
</div>