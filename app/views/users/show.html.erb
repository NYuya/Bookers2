

<div class="container">
  <div class="row">


    <div class="col-lg-3" >

      <div class="profile-container">
        <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          <th>name</th>
          <h3 class="profile-name"><%= @user.name %></h3>
          <th>introduce</th>
          <h3 class="profile-introduction"><%= @user.introduce %></h3>

          <% if @user.id == current_user.id %>
            <%= link_to  edit_user_path(@user), class: "pull-right" , class: "btn btn-default btn-block" do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            <% end %>
          <% end %>
      </div>


      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>

        <div class="field">
          <%= f.label :Opinion %>
          <%= f.text_area :body %>
        </div>

        <div class="actions">
          <%= f.submit 'Create Book', class: "pull-right" , class: "btn btn-primary  btn-block" do %><% end %>
        </div>
      <% end %>

    </div>


      <div class="col-lg-9">
          <div class="container">
            <h2>Books</h2>
              <table class="table table-hover">
                <thead>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                </thead>
                <tbody>
                            <% if @books.present? %>
                              <% @books.each do |book| %>
                                <tr>
                                  <td><%= image_tag book.user %></td>
                                  <td><%= book.title %></td>
                                  <td><%= book.body %></td>
                                </tr>
                              <% end %>
                            <% end %>
                </tbody>
              </table>
          </div>



        </table>
      </div>

  </div>
</div>




