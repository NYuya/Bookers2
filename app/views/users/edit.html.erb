<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
              <div class="container">
                  <div class="row">
                      <div class="col-md-3 col-md-offset-0">
                          <div class="form-user style-1 rounded has-shadow-1">
                            <div class="form-header">
                                <h2 class="form-header-title">User info</h2>
                                <%= render 'layouts/error_messages', model: @user %>
                            </div>
                            <div class="form-body">
                              <%= form_for(@user) do |f| %>


                                <div class="form-group has-icon">
                                  <label>Name</label>
                                  <%= f.text_field :name, autofocus: true %>
                                </div>
                                <div class="form-group has-icon">
                                <label>Image</label>
                                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                                </div>

                                <div class="form-group has-icon">
                                <label>Introduction</label>
                                  <%= f.text_area :introduce, :maxlength => "50", autofocus: true, id:"inputIntroduction" %>
                                </div>

                                  <%= f.submit "Update User", class:"mt-20" %>

                              <% end %>
                            </div>
                          </div>
                      </div>
                  </div>
              </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>