
<table>
  
    <tr>
      <th>Title</th>
      
      <th colspan="3"></th>
    </tr>
 
    <% if @books.present? %>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>


          <% if @book.user == current_user %>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  
</table>



<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Opinion %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>



