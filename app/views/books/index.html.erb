

<div class="container">
  <div class="row">


    <div class="col-lg-3" > 
      <div class="profile-container">
        <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          <h3 class="profile-name"><%= @user.name %></h3>
          <h3 class="profile-introduction"><%= @user.introduce %></h3>

          <% if @user.id == current_user.id %>
            <%= link_to  edit_user_path(@user), class: "pull-right" , class: "btn btn-default btn-lg btn-block" do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            <% end %>
          <% end %>
      </div>


      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>

        <div class="field">
          <%= f.label :Opinion %>
          <%= f.text_area :body %>
        </div>

        <div class="actions">
          <%= f.submit 'Create Book', class: "pull-right" , class: "btn btn-primary btn-lg btn-block" do %><% end %>
        </div>
      <% end %>
    </div>

    
      <div class="col-lg-9">
        <table class="books-index">
          <tr>
            <h2>Books</h2>
            <th>Title</th>
            <th>Opinion</th>
            
            <th colspan="3"></th>
          </tr>
     
          <% if @books.present? %>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to user_path(@user.id) do %><%= image_tag book.user %><% end %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book) %></td>


                <% if @book.user == current_user %>
                  <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                <% end %>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>
    
  </div>
</div>






