<div class="container">
  <div class="row">
    <p id="notice"><%= flash[:notice] %></p>
      <%= render 'layouts/error_messages', model: @newbook %>

    <div class="col-lg-3" >
      <div class="profile-container">
        <h2>User info</h2>
          <div class="row">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          </div>
            <div class="d-block">
              <tr>
                <th>name</th>
                <th class="profile-name"><%= @user.name %></th>
              </tr>
            </div>
            <div class="d-block">
              <tr>
                <th>introduce</th>
                <th class="profile-introduction"><%= @user.introduce %></th>
              </tr>
            </div>

          <% if @user.id == current_user.id %>
            <%= link_to  edit_user_path(@user), class: "pull-right" , class: "btn btn-default btn-block" do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            <% end %>
          <% end %>
      </div>


      <h2>New book</h2>
      <%= form_for(@newbook) do |f| %>


        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>

        <div class="field">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div>

        <div class="actions">
          <%= f.submit 'Create Book', class: "pull-right" , class: "btn btn-primary  btn-block" do %><% end %>
        </div>
      <% end %>

    </div>



    <div class="col-lg-9">
        <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </thead>

          <tbody>
            <% if @books.present? %>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_path(book.user) do %>
                    <%= image_tag book.user %>
                    <% end %>
                  </td>
                  <td><%= link_to book.title, book_path(book.id)%></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
    </div>
</div>




