
<div class="container">
  <div class="row">
    <p id="notice"><%= flash[:notice] %></p>

    <div class="col-lg-3" >

      <div class="profile-container">
        <h2>User info</h2>
          <div class="row">
          <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          </div>
            <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th class="profile-name"><%= @book.user.name %></th>
              </tr>
              <tr>
                <th>introduce</th>
                <th class="profile-introduction"><%= @book.user.introduce %></th>
              </tr>
              <tr></tr>
            </tbody>
          </table>

          <% if @user.id == current_user.id %>
            <%= link_to  edit_user_path(@user), class: "pull-right" , class: "btn btn-default btn-block" do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            <% end %>
          <% end %>
      </div>


      <h2>New book</h2>
      <%= form_for(@newbook) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>

        <div class="field">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div>

        <div class="actions">
          <%= f.submit 'Create Book', class: "pull-right" , class: "btn btn-primary  btn-block" do %><% end %>
        </div>
      <% end %>

    </div>




    <div class="col-lg-9">
        <h2>Book detail</h2>
        <table class="table table-hover">
          <tbody>
            <td><%= link_to user_path(@user) do %><%= image_tag @book.user %><% end %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book), class: "label label-success" %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, class: "label label-danger", "data-confirm" => "本当に消しますか？？" %>
              <% end %>
            </td>
          </tbody>
        </table>
    </div>
  </div>
</div>


