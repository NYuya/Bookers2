
<p id="notice"><%= flash[:notice] %></p>

<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
              <div class="container">
                  <div class="row">
                      <div class="col-md-6 col-md-offset-3">
                          <div class="form-user style-1 has-shadow-1">
                            <div class="form-header text-center " >

                            </div>
                            <div class="form-body">
                                <h1>Editing Book</h1>
                                <%= form_for(@book) do |f| %>
                                <%= render 'layouts/error_messages', model: f.object %>

                                <label>Title</label>
                                <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputName", placeholder:"" %>
                                <label>Opinion</label>
                                <%= f.text_area :body, autofocus: true, class:"form-control", id:"inputOpinion", placeholder:"" %>

                                <div class="actions">
                                	<%= f.submit 'Update Book', class:"btn btn-lg btn-block btn-primary mt-20" %>
                                </div>
                                <% end %>

                                <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>

                            </div>
                          </div>
                      </div>
                  </div>
              </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>